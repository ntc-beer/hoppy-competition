---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link
			rel="icon"
			type="image/svg+xml"
			href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>üçª</text></svg>"
		/>

		<link rel="stylesheet" href="../styles/global.css" />
		<meta name="generator" content={Astro.generator} />
		<title>North Texas Homebrew Circuit</title>
	</head>
	<body>
		<div class="viewport-container text-center">
			<!-- Top Navigation -->
			<Header />

			<main class="mt-24 p-6 pb-6">
				<slot />
			</main>
			<!-- Footer -->
			<Footer />
		</div>
		<script
			is:inline
			src="https://cdn.jsdelivr.net/npm/flowbite@4.0.1/dist/flowbite.min.js"
		></script>
	</body>
</html>
